<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#0000"
    tools:context="com.t.hope.timbiriche.ResultadoPartida">



    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:id="@+id/mensaje"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/ganaste" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mensajetop"
        android:layout_above="@+id/mensaje"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/copa" />

    <ImageButton
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:scaleType="centerInside"
        android:background="@android:color/transparent"
        android:id="@+id/imageButton4"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/boton_menu"
        android:layout_marginBottom="15dp"
        android:onClick="menuprincipal"/>

    <ImageButton
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:scaleType="centerInside"
        android:background="@android:color/transparent"
        android:id="@+id/imageButton6"
        android:layout_above="@+id/imageButton4"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/boton_nueva_partida"
        android:layout_marginBottom="9dp"
        android:onClick="reiniciar"/>

    <ImageButton
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:scaleType="centerInside"
        android:background="@android:color/transparent"
        android:id="@+id/imageButton7"
        android:layout_above="@+id/imageButton4"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/boton_nueva_partida"
        android:layout_marginBottom="9dp"
        android:onClick="nuevapartida"/>

    <ProgressBar
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cargandoN"
        android:layout_below="@+id/mensaje"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
