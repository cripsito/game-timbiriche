<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.t.hope.timbiriche.SalaEspera"
    android:background="@mipmap/fondo">



    <ProgressBar
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cargando"
        android:layout_below="@+id/imageView3"
        android:layout_centerHorizontal="true"
        android:indeterminate="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/estableciendo_conexion"
        android:id="@+id/esco"
        android:textColor="#ff009cff"
        android:textSize="28sp"
        android:layout_below="@+id/imageView4"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView3"
        android:src="@mipmap/caritasconexion"
        android:layout_below="@+id/esco"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="320dp"
        android:layout_height="100dp"
        android:id="@+id/imageView4"
        android:src="@mipmap/imagen2"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/paloma"
        android:layout_below="@+id/imageView3"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/paloma" />

    <ImageButton
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:id="@+id/iniciarmul"
        android:src="@mipmap/boton_iniciar"
        android:scaleType="centerInside"
        android:background="@android:color/transparent"
        android:onClick="iniciapartida"
        android:layout_below="@+id/imageView3"
        android:layout_centerHorizontal="true"/>

    <ImageButton
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:id="@+id/reintentarc"
        android:src="@mipmap/boton_reintentar"
        android:scaleType="centerInside"
        android:background="@android:color/transparent"
        android:onClick="reintentar"
        android:layout_below="@+id/imageView3"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>
